@model List<ShoppingCart>
<form method="post">
	<br />
	<div class="container">
		<div class="card">
			<div class="card-header bg-dark text-light ml-0">
				<div class="row">
					<div class="col-6  pt-2">
						<i class="fa fa-shopping-cart"></i> &nbsp;
						Alışveriş Sepeti
					</div>
					<div class="col-6 text-end">
						<a asp-area="User" asp-controller="Home" asp-action="Index" class="btn btn-outline-info btn-sm">Alışverişe Devam Et</a>
					</div>
				</div>
			</div>

			<div class="card-body">
				@foreach(var item in Model){
				<div class="row">
					<div class="d-none d-lg-block col-lg-1 text-center py-2">
						<img src="@item.product.ImageUrl" class="rounded" width="100%" />
					</div>
					<div class="col-12 col-lg-6 pt-md-3">
						<h5><strong>@item.product.Title</strong></h5>
							<p><small>@item.product.Description</small></p>
					</div>
					<div class="col-12  col-lg-5 text-center row">
						<div class="col-4 text-md-right pt-4">
								<h6><strong>@item.product.Price₺<span class="text-muted">&nbsp;x&nbsp;</span>@item.count </strong></h6>
						</div>
						<div class="col-2 col-sm-4 col-lg-2 text-right pt-2">
							<a asp-action="Remove" asp-route-cartId="@item.Id "class="btn btn-danger">
								<i class="bi bi-trash-fill"></i>
							</a>
						</div>
					</div>
				</div>
				<hr />
				}
				<div class="row">
					<div class="col-12 col-md-6 offset-md-6 col-lg-4 offset-lg-8 pr-4">
						<ul class="list-group">
							<li class="list-group-item d-flex justify-content-between bg-light">
								<span class="text-info"> Toplam (TL)</span>
								<strong class="text-info">@TempData["Total"]</strong>
							</li>
						</ul>
					</div>
				</div>

			</div>

			<div class="card-footer">
				<div class="card-footer row">
					<div class="col-sm-12 col-lg-4 col-md-6 offset-lg-8 offset-md-6 ">
						<a class="btn btn-success form-control">Summary</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</form>
