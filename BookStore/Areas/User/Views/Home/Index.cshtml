@model List<Product>

<div class="row pb-3">
    @foreach(var p in Model)
    {
        <div class="col-lg-3 col-md-6">
           <div class="row p-2">
            <div class="col-12 p-1" style="border:1px solid #008cba; border-radius:5px;">
                <div class="card">
                    <img src="@p.ImageUrl" class="card-img-top rounded"/>
                    <div class="card-body">
                    <div class="pl-1">
                        <p class="card-title h5 text-primary">@p.Title</p>
                        <p class="card-title  text-secondary"><b>@p.Author</b> tarafından yazıldı.</p>
                    </div>
                    <div class="pl-1">
                        <p>Fiyat:<b>₺@p.Price.ToString("0.00")</b></p>
                    </div>
                    </div>
                </div>
                <div>
                    <a asp-action="Details" class="btn btn-danger form-control" asp-route-Productid="@p.Id">
                        Ayrıntılar
                    </a>
                </div>
            </div>
           </div>
        </div>    
    }
</div>