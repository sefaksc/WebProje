@model ShoppingCart
<form method="post">
    <input hidden asp-for="ProductId"/>
    <div class="card  container">
        <div class="card-header bg-primary text-light ml-0  row ">
            <div class="col-12 col-md-6">
                <h1 class="text-white-50">@Model.product.Title</h1>
                <p class="text-warning">@Model.product.Author</p>
            </div>
            <div class="col-12 col-md-6 text-end pt-4">
                <span class="badge bg-warning pt-2" style="height:30px;">@Model.product.CategoryId</span>
            </div>
        </div>
        <div class="card-body row container">
            <div class="container rounded p-2">
                <div class="row">
                    <div class="col-8 col-lg-8">

                        <div class="row pl-2">
                            <h5 style="color:maroon; font-size:large; font-weight:bold">ISBN : @Model.product.ISBN</h5>
                        </div>
                        <div class="row pl-2">
                            
                        </div>
                        <br />
                        <div class="row pl-2" style="color:maroon; font-weight:bold; font-size:large;">
                            <div class="col-2 ">
                                <div>Fiyat : ₺@Model.product.Price</div>
                            </div>
                        </div>
                        <div class="row pl-2">

                        </div>
                        <br />
                        <br />
                        <div class="row pl-2" style="font-size:large;">
                            <p class="text-secondary">@Model.product.Description</p>
                        </div>
                        <div class="row pl-2">
                            <div class="col-2 text-primary"><h4>Miktar</h4></div>
                            <div class="col-10"><input asp-for="count" class="form-control" /></div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-3 offset-lg-1 text-center">
                        <img src="@Model.product.ImageUrl" width="100%" class="rounded" />
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-12 col-md-6 pb-1">
                    <a class="btn btn-success form-control " style="height:50px;" asp-action="Index">Listeye Geri Dön</a>
                </div>
                <div class="col-12 col-md-6 pb-1">
                    <button type="submit" value="Add to Cart" class="btn btn-primary form-control" style="height:50px;">Sepete Ekle</button>
                </div>
            </div>
        </div>
    </div>
</form>
