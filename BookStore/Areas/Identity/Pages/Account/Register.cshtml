@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1 style="color:brown">Kayıt Ol</h1>

<div class="row">
    <div class="col-md-7">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating py-2">
                <input asp-for="Input.Ad" class="form-control" aria-required="true" />
                <label asp-for="Input.Ad"></label>
                <span asp-validation-for="Input.Ad" class="text-danger"></span>
            </div>
            <div class="form-floating py-2">
                <input asp-for="Input.Email" class="form-control"  aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating py-2">
                <input asp-for="Input.Sehir" class="form-control"  aria-required="true" />
                <label asp-for="Input.Sehir"></label>
                <span asp-validation-for="Input.Sehir" class="text-danger"></span>
            </div>
            <div class="form-floating py-2">
                <input asp-for="Input.PostaKodu" class="form-control"  aria-required="true" />
                <label asp-for="Input.PostaKodu"></label>
                <span asp-validation-for="Input.PostaKodu" class="text-danger"></span>
            </div>
            <div class="form-floating py-2">
                <input asp-for="Input.Sifre" class="form-control"  aria-required="true" />
                <label asp-for="Input.Sifre"></label>
                <span asp-validation-for="Input.Sifre" class="text-danger"></span>
            </div>
            <div class="form-floating py-2">
                <input asp-for="Input.SifreDogrulama" class="form-control" aria-required="true" />
                <label asp-for="Input.SifreDogrulama"></label>
                <span asp-validation-for="Input.SifreDogrulama" class="text-danger"></span>
            </div>
            <div class="form-floating py-2">
                <select asp-for="Input.Rol" asp-items="@Model.Input.RoleList" class="form-select" aria-required="true">
                    <option disabled selected>Rol Seçiniz</option>
                </select>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-primary">Register</button>
        </form>
    </div>
    <div class="col-md-5">
        <section>
       
            @{
                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <div>
                       
                    </div>
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                        <div>
                            <p>
                                @foreach (var provider in Model.ExternalLogins)
                                {
                                    <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                }
                            </p>
                        </div>
                    </form>
                }
            }
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
