@model Product

<form method="post" asp-action="DeletePOST">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-danger">Ürün Sil</h2>
            <hr />
        </div>
    </div>
    <div class="mb-3">
        <label asp-for="Title">Başlık</label>
        <input asp-for="Title" disabled class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="ISBN">ISBN</label>
        <input asp-for="ISBN" disabled class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Price">Fiyat</label>
        <input asp-for="Price" disabled class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Author">Yazar</label>
        <input asp-for="Author" disabled class="form-control" />
    </div>
    <button type="submit" class="btn btn-danger" style="width:150px">
        Sil
    </button>
    <a asp-controller="Product" asp-action="Index" class="btn btn-secondary" style="width:150px">
        Listeye Geri Dön
    </a>
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}