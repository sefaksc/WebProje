@model Category

<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-danger">Kategori Sil</h2>
            <hr />
        </div>
    </div>
    <div class="mb-3">
        <label asp-for="CategoryNo">Kategori No</label>
        <input asp-for="CategoryNo" disabled class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Name">Kategori Ad</label>
        <input asp-for="Name" disabled class="form-control" />
    </div>
    <button type="submit" class="btn btn-danger" style="width:150px">
        Sil
    </button>
    <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:150px">
        Listeye Geri Dön
    </a>
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}